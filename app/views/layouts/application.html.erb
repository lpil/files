<!DOCTYPE html>
<html>
<head>
  <title>Files</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if logged_in? %>
  Logged in as <%= current_user.email %>
<% else %>
  Not logged in 
<% end %>

<%= yield %>

<% if Rails.env.development? %>
  <%= debug params %>
  <%= debug flash %>
<% end %>
</body>
</html>
